{
  "name": "supashop-backend",
  "version": "1.0.0",
  "description": "Backend API for SupaShop with PostgreSQL and RBAC",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
